---
import { getCollection } from 'astro:content';
const footerCollection = await getCollection('footer');
const footerContent = footerCollection[0];

const marqueeLinks = footerContent?.data?.marqueeLinks;
---

<footer class="footer">
    <div class="marquee">
        <div class="marquee-content">
            {marqueeLinks?.map((link, index) => (
                <>
                      <a href={link.url} class="marquee-link">{link.text}</a>
                      {index < marqueeLinks.length - 1 ? ' • ' : ' • Hiperstición, editando el futuro.'}
                </>
            ))}
        </div>
    </div>
    <div class="footer-info">
        <span>© {new Date().getFullYear()} <a class="footer-logo" href="/"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 175.2 32.59"><defs><style>.d{fill-rule:evenodd;}.d,.e{fill:#ffffff;}</style></defs><g id="a"/><g id="b"><g id="c"><g><path class="d" d="M33.16,16.3C33.41,37.46-.25,37.45,0,16.3c-.26-21.17,33.42-21.16,33.16,0"/><path class="e" d="M33.16,16.3C33.41,37.46-.25,37.45,0,16.3c-.26-21.17,33.42-21.16,33.16,0"/><polygon class="d" points="55.39 32.58 38.81 32.58 38.81 0 71.96 0 71.96 32.58 55.39 32.58"/><polygon class="e" points="55.39 32.58 38.81 32.58 38.81 0 71.96 0 71.96 32.58 55.39 32.58"/><polygon class="d" points="94.21 32.58 77.63 0 110.79 0 94.21 32.58"/><polygon class="e" points="94.21 32.58 77.63 0 110.79 0 94.21 32.58"/><polygon class="d" points="123.58 0 140.16 32.59 107 32.59 123.58 0"/><polygon class="e" points="123.58 0 140.16 32.59 107 32.59 123.58 0"/><polygon class="d" points="158.62 0 142.04 12.46 148.53 32.59 168.7 32.59 175.2 12.46 158.62 0"/></g></g></g></svg> Hiperstición</a></span>
        <div class="buttons">
            <a href="/contacto">Contacto</a>
            <a href="https://www.instagram.com/hipersticion.editorial/">IG</a>
        </div>
    </div>
</footer>

<style>
    .footer {
        position: fixed;
        bottom: 0;
        left: 0;
        width: 100%;
        background-color: var(--accent);
        color: var(--white);
        font-family: "Space Grotesk", sans-serif;
        z-index: 1000;
    }

    .footer-logo {
        width: 100%;
    }

    .footer-logo svg {
        width: 60px;
        fill: var(--white);
    }

    .marquee {
        overflow: hidden;
        padding: 10px 0;
        display: none;
    }

    .marquee-content {
        display: inline-block;
        white-space: nowrap;
        animation: marquee 40s linear infinite;
        font-size: 1rem;
    }

    @keyframes marquee {
        0% { transform: translateX(100%); }
        100% { transform: translateX(-100%); }
    }

    .footer-info {
        display: flex;
        justify-content: space-between;
        padding: 10px 20px;
        background-color: var(--accent-dark);
        font-size: 0.9rem;
    }

    .footer-info span {
        font-weight: 500;
    }

    .footer-info a:hover {
        text-decoration: underline;
    }

    .footer-info a {
        color: var(--white);
        text-decoration: none;
    }

    .buttons a {
        padding: 0 10px;
        border-left: 1px solid var(--white);
        border-right: 1px solid var(--white);
    }

    .buttons a:first-child {
        border-left: none;
    }

    .marquee-link {
        color: var(--white);
        text-decoration: none;
        transition: text-decoration 0.2s ease;
        margin-right: 10px;
        margin-left: 10px;
    }

    .marquee-link:hover {
        text-decoration: underline;
    }

    /* Media queries para tablets y desktop */
    @media (min-width: 768px) {
        .marquee {
            display: block;
        }

        .footer-info {
            font-size: 1.125rem;
        }
    }

    @media (max-width: 768px) {
        .footer {
            position: relative;
        }

        .footer-info {
            flex-direction: column;
            text-align: center;
            gap: 10px;
            font-size: 0.9rem;
        }

        .buttons {
            display: flex;
            justify-content: center;
            gap: 20px;
        }

        .buttons a {
            border: none !important;
            padding: 0 !important;
        }

        .marquee-content {
            font-size: 0.9rem;
        }
    }
</style>
