---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import Menu from '../../components/Menu.astro';
import FormattedDate from '../../components/FormattedDate.astro';

const title = 'Blog';
const description = 'Artículos y publicaciones de Hiperstición - Editorial cooperativa autogestionada.';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="es">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			.blog-container {
				display: flex;
				min-height: 100vh;
			}

			.blog-menu {
				width: 50%;
				background: var(--gray-gradient);
			}

			.blog-content {
				width: 50%;
				border-left: 2px solid var(--accent);
			}

			.blog-list {
				display: grid;
				grid-template-columns: 1fr;
				border-top: 2px solid var(--accent);
			}

			.blog-preview {
				background-color: var(--white);
				padding: 1.5rem;
				border-bottom: 1px solid var(--gray-dark);
			}

			.blog-preview h2 {
				margin-top: 0;
				color: var(--accent);
			}

			.blog-preview a {
				color: var(--accent);
				text-decoration: none;
			}

			.blog-preview a:hover {
				text-decoration: underline;
			}

			.blog-date {
				font-style: italic;
				color: var(--gray-dark);
				margin-bottom: 1rem;
			}

			.read-more {
				display: inline-block;
				margin-top: 1rem;
				font-weight: bold;
			}

			@media (max-width: 768px) {
				.blog-container {
					flex-direction: column;
				}

				.blog-menu, .blog-content {
					width: 100%;
				}

				.blog-content {
					border-left: none;
					border-top: 2px solid var(--accent);
				}

				.blog-list {
					grid-template-columns: 1fr;
				}
			}
		</style>
	</head>
	<body>
		<div class="blog-container">
			<div class="blog-menu">
				<Menu />
			</div>
			<div class="blog-content">
				<div class="blog-list">
					{posts.map((post) => (
						<div class="blog-preview">
							{post.data.heroImage && (
								<Image width={720} height={360} src={post.data.heroImage} alt={post.data.title} />
							)}
							<h2>
								<a href={`/blog/${post.id}/`}>
									{post.data.title}
								</a>
							</h2>
							<p class="blog-date">
								<FormattedDate date={post.data.pubDate} />
							</p>
							{post.data.description && (
								<p>{post.data.description}</p>
							)}
							<a href={`/blog/${post.id}/`} class="read-more">Leer más</a>
						</div>
					))}
				</div>
			</div>
		</div>
		<Footer />
	</body>
</html>
