<style>
	.contacto-container {
		margin-left: 50%;
		border-top: 2px solid var(--accent);
		padding: 2rem;
	}

	.contacto-content {
		width: 100%;
		max-width: 800px;
	}

	/* About Section */
	.about-section {
		margin-bottom: 3rem;
	}

	.about-section h1 {
		font-size: 2.5rem;
		color: var(--black);
		margin-bottom: 2rem;
		font-weight: 700;
	}

	.intro-content p {
		font-size: 1.1rem;
		line-height: 1.8;
		margin-bottom: 1.5rem;
		color: var(--gray-dark);
	}

	.intro-content strong {
		font-weight: 700;
		color: var(--accent);
	}

	.commissions {
		margin-top: 2rem;
		padding: 1.5rem;
		background: var(--white);
		border: 1px solid var(--black);
		border-radius: 4px;
	}

	.commissions h3 {
		font-size: 1.3rem;
		color: var(--accent);
		margin-bottom: 1rem;
		font-weight: 600;
	}

	.commissions ul {
		margin: 0;
		padding-left: 2rem;
	}

	.commissions li {
		margin-bottom: 0.8rem;
		list-style-type: disc;
		font-size: 1rem;
		color: var(--gray-dark);
	}

	.small {
		font-size: .6rem;
	}

	/* Contact Section */
	.contact-section h2 {
		font-size: 2rem;
		color: var(--black);
		margin-bottom: 2rem;
		font-weight: 700;
		border-bottom: 2px solid var(--accent);
		padding-bottom: 0.5rem;
	}

	.contact-methods {
		display: grid;
		gap: 2rem;
		margin-bottom: 2rem;
	}

	.contact-method {
		padding: 1.5rem;
		background: var(--white);
		border: 2px solid var(--black);
		border-radius: 4px;
		transition: border 0.2s ease;
	}

	.contact-method:hover {
		border: 2px solid var(--accent);
	}

	.contact-method h3 {
		font-size: 1.3rem;
		color: var(--accent);
		margin-bottom: 1rem;
		font-weight: 600;
	}

	.contact-method p {
		font-size: 1rem;
		line-height: 1.6;
		color: var(--gray-dark);
		margin-bottom: 1.5rem;
	}

	.contact-links {
		display: flex;
		flex-direction: column;
		gap: 0.8rem;
	}

	.contact-link {
		display: flex;
		align-items: center;
		padding: 0.8rem 1rem;
		background: var(--accent-light);
		color: var(--black);
		text-decoration: none;
		border-radius: 4px;
		transition: all 0.2s ease;
		font-weight: 500;
	}

	.contact-link:hover {
		background: var(--accent);
		color: var(--white);
		text-decoration: none;
		transform: translateY(-1px);
	}

	.contact-link .icon {
		margin-right: 0.8rem;
		font-size: 1.2rem;
	}

	/* Media queries para tablets y desktop */
	@media (min-width: 1180px) {
		.contacto-container {
			margin-left: 50%;
			border-top: 2px solid var(--accent);
			padding: 1rem 0 100px 0;
		}

		.contact-methods {
			grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		}
	}

	@media (max-width: 768px) {
		.contacto-container {
			margin-left: 0;
			border-top: 2px solid var(--accent);
			padding: 1rem;
		}

		.about-section h1 {
			font-size: 2rem;
		}

		.contact-section h2 {
			font-size: 1.5rem;
		}

		.intro-content p,
		.contact-method p {
			font-size: 1rem;
		}

		.contact-methods {
			grid-template-columns: 1fr;
		}

		.contact-method {
			padding: 1rem;
		}

		.commissions {
			padding: 1rem;
		}

		.contact-link {
			padding: 0.6rem 0.8rem;
		}
	}
</style>