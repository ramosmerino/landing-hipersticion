---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import Menu from '../../components/Menu.astro';

const title = 'Catálogo de Libros';
const description = 'Explora nuestro catálogo de libros de filosofía, ciencia y pensamiento contemporáneo.';

const books = await getCollection('books');
---

<!doctype html>
<html lang="es">
	<head>
		<BaseHead title={title} description={description} />
	</head>
	<body>
		<Menu />
		<main class="catalogo-container">
			<div class="catalogo-content">
				<div class="book-grid">
					{books.map((book) => (
							<div class="book-item">
							<img src={book.data.cover} alt="Portada de Noche" class="book-cover">
							<h2 class="book-title">{book.data.title}</h2>
							<p class="book-author">{book.data.author}</p>
							<p class="book-description" set:html={book.data.description}></p>
						</div>
					))}
				</div>
			</div>
		</main>
				<Footer />
			</body>
		</html>

		<style>
			.catalogo-container {
				margin-left: 50%;
				min-height: 100vh;
				border-top: 2px solid var(--accent);
			}

			.catalogo-content {
				width: 100%;
			}

			.book-grid {
				display: grid;
				grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
				gap: 0;
			}

			.book-item {
				background: var(--white);
				border: 1px solid var(--black);
				overflow: hidden;
				transition: transform 0.3s ease;
			}

			.book-item:hover {
				transform: translateY(-5px);
			}

			.book-cover {
				width: 100%;
				object-fit: cover;
			}

			.book-title {
				font-family: var(--base-font);
				font-size: 1.2rem;
				margin: 1rem 0 0.5rem;
				padding: 0 1rem;
			}

			.book-author {
				font-style: italic;
				margin: 0 0 0.5rem;
				padding: 0 1rem;
			}

			.book-description {
				font-size: 0.9rem;
				line-height: 1.4;
				margin: 0 0 1rem;
				padding: 0 1rem;
			}

			.book-description a {
				color: var(--accent);
				text-decoration: none;
			}

			.book-description a:hover {
				text-decoration: underline;
			}

			/* Media queries para tablets y desktop */
			@media (min-width: 768px) {
				.catalogo-container {
					padding: 1rem 0 100px 0;
					margin-left: 50%;
					border-top: 2px solid var(--accent);
				}

				.book-grid {
					grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
				}
			}

			@media (max-width: 768px) {
				.catalogo-container {
					margin-left: 0;
					border-top: 2px solid var(--accent);
				}

				.book-grid {
					grid-template-columns: 1fr;
				}
			}
		</style>