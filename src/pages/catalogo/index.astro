		<style>
			.catalogo-container {
				margin-left: 50%;
				min-height: 100vh;
				border-top: 2px solid #d05240;
				padding: 2rem;
			}

			.catalogo-content {
				width: 100%;
			}

			.book-grid {
				display: grid;
				grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
				gap: 0;
			}

			.book-item {
				background: #fff;
				border: 1px solid #000;
				overflow: hidden;
				transition: transform 0.3s ease;
			}

			.book-item:hover {
				transform: translateY(-5px);
			}

			.book-cover {
				width: 100%;
				object-fit: cover;
			}

			.book-title {
				font-family: "Space Grotesk", sans-serif;
				font-size: 1.2rem;
				margin: 1rem 0 0.5rem;
				padding: 0 1rem;
			}

			.book-author {
				font-style: italic;
				margin: 0 0 0.5rem;
				padding: 0 1rem;
			}

			.book-description {
				font-size: 0.9rem;
				line-height: 1.4;
				margin: 0 0 1rem;
				padding: 0 1rem;
			}

			.book-description a {
				color: var(--accent);
				text-decoration: none;
			}

			.book-description a:hover {
				text-decoration: underline;
			}

			/* Media queries para tablets y desktop */
			@media (min-width: 768px) {
				.catalogo-container {
					margin-left: 50%;
					border-top: 2px solid var(--accent);
				}

				.book-grid {
					grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
				}
			}

			@media (max-width: 768px) {
				.catalogo-container {
					margin-left: 0;
					border-top: 2px solid var(--accent);
				}

				.book-grid {
					grid-template-columns: 1fr;
				}
			}
		</style>