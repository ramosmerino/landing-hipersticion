---
layout: base.njk
title: Blog
---
<div class="column-2">
{% include 'menu.njk' %}
</div>
<div class="column-2">
    <h1>{{ title }}</h1>
    <div class="blog-list">
        {% for post in collections.post | reverse %}
            <article class="blog-preview">
                <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
                <p class="blog-date">{{ post.date }}</p>
                <p>{{ post.data.description }}</p>
                <a href="{{ post.url }}" class="read-more">Leer m√°s</a>
            </article>
        {% endfor %}
    </div>
</div>
